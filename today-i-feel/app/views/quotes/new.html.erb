<h1>Add a new quote</h1>

<%= form_for :quote, url: quotes_path, method: :post do |f| %>
  <p class="form-tags"> Body: </p> <%= f.text_area :body, cols: "30", rows: "5", :required => true %><br />
  <p class="form-tags"> Author: </p> <%= f.text_field :author, :required => true %><br />
  <p class="form-tags"> Emotion: </p> <%= select_tag(:emotion, options_for_select([['Happy'], ['Sad'], ['Numb'], ['Angry'], ['Lost']])) %><br /><br />
  <%= f.submit %>
<% end %>